<Window x:Class="WPFClient.ConnectingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClient"
        mc:Ignorable="d"
        Title="ConnectingWindow" Height="127" Width="323" WindowStyle="None" AllowsTransparency="True">
    <Grid>
        <Image HorizontalAlignment="Left" Height="82" Margin="8,8,0,0" VerticalAlignment="Top" Width="80" Source="Resources/Loading.png" RenderOptions.BitmapScalingMode="HighQuality" Stretch="UniformToFill"/>
        <ListBox x:Name="Log" HorizontalAlignment="Left" Height="82" Margin="94,8,0,0" VerticalAlignment="Top" Width="221"/>
        <TextBox x:Name="Username" Height="20" Margin="71,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="242" HorizontalAlignment="Left" KeyDown="Username_KeyDown" Text="Press enter to confirm" UndoLimit="0"/>
        <Label x:Name="UsernameLabel" Content="Username:" Width="58" Height="13" VerticalAlignment="Top" Padding="0" HorizontalAlignment="Left" Margin="8,102,0,0"/>

    </Grid>
</Window>
