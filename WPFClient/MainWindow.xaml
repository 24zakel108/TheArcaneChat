<Window x:Name="Main" x:Class="WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClient"
        mc:Ignorable="d"
        Title="TheArcaneChat [WPF] -=- v0.0.1" Height="355" Width="661" AutomationProperties.Name="Test" AllowsTransparency="True" WindowStyle="None" Foreground="Red">
    <Window.OpacityMask>
        <SolidColorBrush Color="Black"/>
    </Window.OpacityMask>
    <Grid>
        <Grid Margin="0,30,100,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ListBox x:Name="LbChat" Margin="0,0,0,18"/>
            <TextBox x:Name="TxbInput" Margin="0,0,30,0" TextWrapping="Wrap" SpellCheck.IsEnabled="True" VerticalAlignment="Bottom" KeyDown="TxbInput_KeyDown"/>
            <Button x:Name="BtnSend" Content="Send" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="20" MinWidth="30" MouseLeftButtonDown="BtnSend_MouseLeftButtonDown" Height="18"/>
        </Grid>
        <Grid HorizontalAlignment="Right" MinWidth="100" Margin="0,30,0,0">
            <ListBox x:Name="ListBoxOnline"/>
        </Grid>
        <Grid x:Name="Titlebar" Height="30" VerticalAlignment="Top" Margin="0">
            <Rectangle x:Name="TitleBar" Fill="#FF005DFF"/>
            <Rectangle x:Name="CloseButton" Margin="0" Height="30" Width="30" HorizontalAlignment="Right" VerticalAlignment="Top" Stroke="Black">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="Resources/CloseButton.png" Stretch="UniformToFill"/>
                </Rectangle.Fill>
            </Rectangle>
            <Label x:Name="WindowTitle" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Grid>
        <Slider x:Name="slider" Margin="83,137,258,200"/>
    </Grid>

</Window>
