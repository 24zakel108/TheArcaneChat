<Window x:Name="YU" x:Class="WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClient"
        mc:Ignorable="d"
        Title="TheArcaneChat [WPF] -=- v0.0.1" Height="308" Width="552" AutomationProperties.Name="Test">
    <Grid>
        <Grid Margin="0,0,100,0">
            <ListBox x:Name="LbChat" Margin="10,10,0,40">
                <ListBoxItem Content="Hi"/>
            </ListBox>
            <TextBox x:Name="TxbInput" Margin="10,0,50,15" TextWrapping="Wrap" SpellCheck.IsEnabled="True" VerticalAlignment="Bottom"/>
            <Button x:Name="BtnSend" Content="Send" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="20" MinWidth="30" MinHeight="30" Margin="0,0,5,5"/>
        </Grid>
        <Grid HorizontalAlignment="Right" MinWidth="100">
            <ListBox x:Name="ListBoxOnline" Margin="0,10,0,0"/>
        </Grid>
    </Grid>
    
</Window>
